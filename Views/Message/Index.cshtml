@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Gelen Mesaj Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="Arayınız">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>E-Posta</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Subject</td>
                            <td>@item.Email</td>
                            <td>@item.SendDate.ToString("dd-MM-yyyy HH:mm")</td>
                            <td><a href="#" class="btn btn-outline-warning">@item.IsRead</a></td>
                            <td>
                                <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                    <a href="/Message/MessageDetail/@item.MessageId" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mesajı Gör"><i class="bi bi-eye-fill"></i></a>
                                    <a href="/Message/UpdateMessage/@item.MessageId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a>
                                    <a href="/Message/DeleteMessage/@item.MessageId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Message/CreateMessage/" class="btn btn-outline-info">
                Yeni Mesaj Girişi
            </a>
        </div>
    </div>
</div>



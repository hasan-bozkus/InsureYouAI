@model Message
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni İletişim Talebi Girişi</h5>

        </div>
        <div class="table-responsive mt-3">

            <form method="post">

                <input type="hidden" asp-for="MessageId" />

                <label>Gönderici Ad Soyad</label>
                <input type="text" asp-for="NameSurname" class="form-control" />
                <br />

                <label>Konu</label>
                <input type="text" asp-for="Subject" class="form-control" />
                <br />

                <label>Telefon</label>
                <input type="tel" asp-for="PhoneNumber" class="form-control" />
                <br />

                <label>E-Posta</label>
                <input type="email" asp-for="Email" class="form-control" />
                <br />

                <label>Açıklama</label>
                <textarea rows="5" class="form-control" asp-for="MessageDetail"> </textarea>
                <br />
                <br />
                <button class="btn btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>



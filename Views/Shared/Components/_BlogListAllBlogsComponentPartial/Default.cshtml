@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<Article>

<div class="col-lg-8">
    @foreach (var item in Model)
    {
        <div class="bsingle__post mb-50">
            <div class="bsingle__post-thumb">
                <img src="@item.CoverImageUrl" alt="">
            </div>
            <div class="bsingle__content">
                <div class="meta-info">
                    <ul>
                        <li><i class="fal fa-user"></i>@item.AppUser.Name @item.AppUser.Surame</li>
                        <li><i class="fal fa-calendar-alt"></i>  @item.CreatedDate.ToString("dd-MMM-yyyy")</li>
                        <li><i class="fal fa-car"></i>  @item.Category.CategoryName</li>
                        <li><i class="fal fa-comment"></i>  0 Yorum</li>
                    </ul>
                </div>
                <h2>
                    <a href="/Blog/BlogDetail/@item.ArticleId">
                        @item.Title
                    </a>
                </h2>
                <p>@Html.Raw(item.Content.Substring(0, 300))...</p>
                <div class="blog__btn">
                    <a href="/Blog/BlogDetail/@item.ArticleId" class="btn">Devamını Oku</a>
                </div>
            </div>
        </div>

    }


    <div class="pagination-wrap mb-50">
        <nav>
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", "Blog", new { page }),
            new PagedListRenderOptions
            {
                LinkToNextPageFormat = "<i class='fas fa-angle-double-right'></i>",
                LinkToPreviousPageFormat = "<i class='fas fa-angle-double-left'></i>",
                ContainerDivClasses = new[] { "pagination-wrap mb-50" },
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "" },
                ActiveLiElementClass = "page-item active"
            })
        </nav>
    </div>
</div>

